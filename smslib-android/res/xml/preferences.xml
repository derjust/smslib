<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <EditTextPreference
        android:id="@+id/prefHost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:key="host"
        android:defaultValue="192.168.0.1"
        android:summary="@string/prefHostSummary"
        android:title="Host" />

      <EditTextPreference
        android:id="@+id/prefPort"
        android:inputType="number"
        android:numeric="integer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:key="port"
        android:defaultValue="9999"
        android:summary="@string/prefPortSummary"
        android:title="Port" />
        
    <EditTextPreference
        android:id="@+id/prefAuthToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:key="authToken"
        android:defaultValue=""
        android:summary="@string/prefAuthTokenSummary"
        android:title="Authentication Token" />

    
    
</PreferenceScreen>