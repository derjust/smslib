<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.smslib.gateway.proxy.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

   	 <!-- Permission to Receive SMS  -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.INTERNET" /> 
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.smslib.gateway.proxy.android.OverviewActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.smslib.gateway.proxy.android.SettingsActivity"
            android:label="@string/action_settings" >
        </activity>
        
        <service
            android:name="org.smslib.gateway.proxy.android.MessageProxyBridge"
            android:exported="false"/>
        
        <service
            android:name="org.smslib.gateway.proxy.android.StatisticsProxyBridge"
            android:exported="false"/>
        
        <receiver android:name="org.smslib.gateway.proxy.android.SmsReceiver"> 
            <intent-filter android:priority="2147483647"> 
                <action android:name=
                    "android.provider.Telephony.SMS_RECEIVED" /> 
            </intent-filter> 
        </receiver>
    </application>
</manifest>
